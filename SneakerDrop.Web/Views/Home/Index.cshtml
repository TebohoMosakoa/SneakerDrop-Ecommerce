@model SneakerDrop.Web.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div id="carousel-home">
    <div class="owl-carousel owl-theme">
        <div class="owl-slide cover" style="background-image: url('../../Content/images/system/1.jpg');">
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                <div class="container">
                    <div class="row justify-content-center justify-content-md-end">
                        <div class="col-lg-6 static">
                            <div class="slide-text text-right white">
                                <h2 class="owl-slide-animated owl-slide-title">Nike<br>Jordan 1's</h2>
                                <p class="owl-slide-animated owl-slide-subtitle">
                                    Fresh Out!
                                </p>
                                <div class="owl-slide-animated owl-slide-cta"><a class="btn_1" href="listing-grid-1-full.html" role="button">Shop Now</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/owl-slide-->
        <div class="owl-slide cover" style="background-image: url('../../Content/images/system/2.jpg');">
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                <div class="container">
                    <div class="row justify-content-center justify-content-md-start">
                        <div class="col-lg-6 static">
                            <div class="slide-text white">
                                <h2 class="owl-slide-animated owl-slide-title">NMD OG Black</h2>
                                <p class="owl-slide-animated owl-slide-subtitle">
                                    Limited stock
                                </p>
                                <div class="owl-slide-animated owl-slide-cta"><a class="btn_1" href="listing-grid-1-full.html" role="button">Shop Now</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/owl-slide-->
        <div class="owl-slide cover" style="background-image: url('../../Content/images/system/3.jpg');">
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(255, 255, 255, 0.5)">
                <div class="container">
                    <div class="row justify-content-center justify-content-md-start">
                        <div class="col-lg-12 static">
                            <div class="slide-text text-center black">
                                <h2 class="owl-slide-animated owl-slide-title">And A Whole Lot More</h2>
                                <p class="owl-slide-animated owl-slide-subtitle">

                                </p>
                                <div class="owl-slide-animated owl-slide-cta"><a class="btn_1" href="listing-grid-1-full.html" role="button">Shop Now</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/owl-slide-->
        </div>
    </div>
    <div id="icon_drag_mobile"></div>
</div>
<!--/carousel-->


@if (Model.FeaturedCategories != null && Model.FeaturedCategories.Count >= 3)
{
    var firstCategory = Model.FeaturedCategories[0];
    var secondCategory = Model.FeaturedCategories[1];
    var thirdCategory = Model.FeaturedCategories[2];
    <ul id="banners_grid" class="clearfix">
        <li>
            <a href="@Url.Action("Index","Shop")" class="img_container">
                @if (firstCategory != null)
                {
                    <img src="@firstCategory.ImageURL" class="lazy" />
                    <div class="short_info opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                        <h3>@firstCategory.Name</h3>
                        <div><span class="btn_1">Shop Now</span></div>
                    </div>
                }
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index","Shop")" class="img_container">
                @if (secondCategory != null)
                {
                    <img src="@secondCategory.ImageURL" class="lazy" />
                    <div class="short_info opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                        <h3>@secondCategory.Name</h3>
                        <div><span class="btn_1">Shop Now</span></div>
                    </div>
                }
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index","Shop")" class="img_container">
                @if (thirdCategory != null)
                {
                    <img src="@thirdCategory.ImageURL" class="lazy" />
                    <div class="short_info opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                        <h3>@thirdCategory.Name</h3>
                        <div><span class="btn_1">Shop Now</span></div>
                    </div>
                }
            </a>
        </li>
    </ul>
}

<!--/banners_grid -->

<div class="container margin_60_35">
    <div class="main_title">
        <h2>New</h2>
        <span>Products</span>
    </div>

    @{Html.RenderAction("Products", "Widgets", new { isLatestProducts = true });}

</div>
<!-- /container -->

<script src="~/Content/main.js"></script>